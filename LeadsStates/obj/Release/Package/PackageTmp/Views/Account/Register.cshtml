        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="row mt-3">

            <div class="col-md-6 mt-2">
                <label for="" class="mb-0 font-weight-bold">First Name</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="col-md-6 mt-2">
                <label for="" class="mb-0 font-weight-bold">Last Name</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="col-md-6 mt-2">
                <label for="" class="mb-0 font-weight-bold">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="col-md-6 mt-2">
                <label for="" class="mb-0 font-weight-bold">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="col-md-6 mt-2">
                <label for="" class="mb-0 font-weight-bold">Confirm Password</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="col-md-6 mt-2">
                <label for="" class="mb-0 font-weight-bold">Mobile Number</label>
                @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control" })
            </div>
            <div class="col-md-6 mt-2">
                <div class="row">
                    <div class="col-md-6 mt-1">
                        <label for="" class="mb-0 font-weight-bold">Gender</label>
                        <div class="form-check">                            
                            @Html.RadioButtonFor(model => model.Gender, "Male")
                            Male
                            @Html.RadioButtonFor(model => model.Gender, "Female")
                            Female
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-2">
                <label for="" class="mb-0 font-weight-bold">CNIC</label>
                @Html.TextBoxFor(m => m.CNIC, new { @class = "form-control", @placeholder = "XXXXX-XXXXXXX-X" })
            </div>
            <div class="col-md-6 mt-2">
                <div class="row">
                    <div class="col-md-12 mt-1">
                        <label for="" class="mb-0 font-weight-bold">Selary Type</label>
                        <div class="form-check">

                            @Html.RadioButtonFor(model => model.SelaryType, "Fixed")
                            Fixed
                            @Html.RadioButtonFor(model => model.SelaryType, "Commission")
                            Commission
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-2">
                <label for="" class="mb-0 font-weight-bold">Amount / %</label>
                @Html.TextBoxFor(m => m.SelaryAmount, new { @class = "form-control" })
            </div>
            <div class="col-md-12 mt-1">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
            <div class="col-md-12 mt-4 text-right">
                <input type="submit" class="btn btn-dark" value="SAVE" />
            </div>
        </div>
            
        }
